@{
    Layout = "/Areas/admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 style="margin-bottom:15px;margin-top:15px;">CMS YÖNETİMİ</h2>
<table class="table table-bordered" style="margin-bottom:15px;">
    <thead>
        <tr>
            <td>Yorum Yapan</td>
            <td>Yorum</td>
            <td>İşlemler</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.NameSurName</td>
                <td style="vertical-align:middle">@item.Comment</td>
                <td style="vertical-align:middle">
                    <a href="/admin/AdminBlog/YorumUpdate/@item.Id" class="btn btn-primary">Aktf/Pasif</a>
                </td>
            </tr>
        }
    </tbody>

</table>

@if (TempData["Mesaj"] != null)
{
    <div class="alert alert-info">@TempData["Mesaj"]</div>
}