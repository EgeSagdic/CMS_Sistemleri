
<h2 style="margin-bottom:15px;margin-top:15px;">CMS YÖNETİMİ</h2>
<a href="/admin/AdminPage" class="btn btn-primary" style="margin-bottom:15px;">Geri Git</a>

<form action="/admin/AdminBlog/Update/@Model.Id" method="post" enctype="multipart/form-data">

      <img src="/images/blog/@Model.PostImage" style="width:250px; margin-bottom:15px;">


    <input name="file" type="file" class="form-control" style="margin-top:15px;" />
    <input name="Title" class="form-control" value="@Model.Title" style="margin-top:15px;" />
    <textarea name="Content" id="Content" class="form-control" placeholder="İçerik :" style="margin-top:15px;height:350px">@Model.Content</textarea>
    <select name="CategoryId" class="form-control" style="margin-top:15px;">
        @foreach (var item in ViewBag.Kategori)
        {
            <option value="@item.Id">@item.Name</option>
        }
    </select>
    <input type="submit" value="Kaydet" class="btn btn-primary" style="margin-top:15px;" />
</form>
<script type="text/javascript">
    var editor = CKEDITOR.instances['Content'];
    if (editor) { editor.destroy(true); }
    CKEDITOR.replace('Content', {
        enterMode: CKEDITOR.ENTER_BR,
    });
</script>
@if (ViewBag.Mesaj != null)
{
    <div class="alert alert-info">@ViewBag.Mesaj</div>
}