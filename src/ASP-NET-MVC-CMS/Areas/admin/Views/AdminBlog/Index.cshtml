@{
    Layout = "/Areas/admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 style="margin-bottom:15px;margin-top:15px;">CMS YÖNETİMİ</h2>
<a href="/admin/AdminBlog/Insert" class="btn btn-primary" style="margin-bottom:15px;">Yeni  Ekle</a>
<table class="table table-bordered" style="margin-bottom:15px;">
    <thead>
        <tr>
            <td>Id</td>
            <td>Resim</td>
            <td>Blog Adı</td>
            <td>İşlemler</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td style="vertical-align:middle">@item.Id</td>
                <td><img src="/images/blog/@item.PostImage" style="width:100px"></td>
                <td style="vertical-align:middle">@item.Title</td>
                <td style="vertical-align:middle">
                    <a href="/admin/AdminBlog/Yorumlar/@item.Id" class="btn btn-info">Yorumlar</a>
                    <a href="/admin/AdminBlog/Update/@item.Id" class="btn btn-primary">Düzenle</a>
                    <a href="/admin/AdminBlog/Delete/@item.Id" class="btn btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>

</table>

@if (TempData["Mesaj"] != null)
{
    <div class="alert alert-info">@TempData["Mesaj"]</div>
}