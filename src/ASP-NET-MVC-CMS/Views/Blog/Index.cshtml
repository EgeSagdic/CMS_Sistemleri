@{
    Layout = "/Views/Shared/_Layout.cshtml";
}

<section class="page-title bg-1">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="block text-center">
                    <span class="text-white">Bloglarımız</span>
                    <h1 class="text-capitalize mb-5 text-lg">Bloglarımız</h1>

                </div>
            </div>
        </div>
    </div>
</section>

<section class="section blog-wrap">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="row">


                    @foreach (var item in Model)
                    {
                        <div class="col-lg-12 col-md-12 mb-5">
                            <div class="blog-item">
                                <div class="blog-thumb">
                                    <img src="/images/blog/@item.PostImage" alt="" class="img-fluid">
                                </div>
                                <div class="blog-item-content">

                                    <h2 class="mt-3 mb-3"><a href="/BlogDetay/@ASP_NET_MVC_CMS.Models.Temizle.TurkceTemizle(item.Title)/@item.Id">@item.Title</a></h2>

                                    @if (item.Content.Length > 300)
                                    {
                                        <p class="mb-4">@Html.Raw(item.Content.Substring(0, 300))</p>
                                    }
                                    else
                                    {
                                        <p class="mb-4">@Html.Raw(item.Content)</p>
                                    }
                                    <a href="/BlogDetay/@ASP_NET_MVC_CMS.Models.Temizle.TurkceTemizle(item.Title)/@item.Id" class="btn btn-main btn-icon btn-round-full">İncele <i class="icofont-simple-right ml-2  "></i></a>
                                </div>
                            </div>
                        </div>
                    }

                </div>
            </div>
            <div class="col-lg-4">
                <div class="sidebar-wrap pl-lg-4 mt-5 mt-lg-0">


                    <div class="sidebar-widget category mb-3">
                        <h5 class="mb-4">Kategoriler</h5>

                        <ul class="list-unstyled">
                            @foreach (var item in ViewBag.Kategoriler)
                            {
                                <li class="align-items-center">
                                    <a href="/Blogs/@ASP_NET_MVC_CMS.Models.Temizle.TurkceTemizle(item.Name)/@item.Id">@item.Name</a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>